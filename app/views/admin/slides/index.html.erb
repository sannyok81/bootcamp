<p id="notice"><%= notice %></p>

<h1>Slides</h1>

<table>
  <thead>
    <tr>
      <th>Image</th>
      <th>Link</th>
      <th>Button label</th>
      <th>Title</th>
      <th>Text</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @slides.each do |slide| %>
      <tr>
        <td><%= slide.image %></td>
        <td><%= slide.link %></td>
        <td><%= slide.button_label %></td>
        <td><%= slide.title %></td>
        <td><%= slide.text %></td>
        <td><%= link_to 'Show', slide %></td>
        <td><%= link_to 'Edit', edit_slide_path(slide) %></td>
        <td><%= link_to 'Destroy', slide, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Slide', new_slide_path %>
